{
    "name": "gopro_128",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        // "resume_state": "experiments/sr_ffhq_210806_204158/checkpoint/I640000_E37" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "GOPRO",
            "mode": "LQGT_event", // whether need LR img
            "data_type": "img", //lmdb or img, path of img files
            "dataroot_GT": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/train/sharp",
            "dataroot_LQ": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/train/blur",
            "dataroot_event_H5": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/train/H5/train_blur.h5",
            "use_shuffle": true,
            "n_workers": 0,  // per GPU
            "batch_size": 2,
            "GT_size": 128,
            "use_flip": true,
            "use_rot": true,
            // "color": "RGB",
            "scale": 1
        },
        "val": {
            "name": "GOPRO_valid",
            "mode": "LQGT_event",
            "data_type": "img", //lmdb or img, path of img files
            "dataroot_GT": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/test/sharp",
            "dataroot_LQ": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/test/blur",
            "dataroot_event_H5": "/gdata/linrj/Event_Deblur/GOPRO/GOPRO_total/test/H5/test_blur.h5",
            "GT_size": 128,
            "scale": 1
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 3, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        // "n_iter": 1000000,
        // "val_freq": 1e4,
        // "save_checkpoint_freq": 1e4,
        // "print_freq": 200,
        "n_iter": 1000000,
        "val_freq": 10,
        "save_checkpoint_freq": 1e4,
        "print_freq": 10,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "gopro_128"
    }
}